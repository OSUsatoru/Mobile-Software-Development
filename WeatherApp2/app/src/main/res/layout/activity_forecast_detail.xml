<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_detail_name"
        android:layout_width="269dp"
        android:layout_height="106dp"
        android:layout_marginTop="56dp"

        android:textAppearance="?attr/textAppearanceHeadline3"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_detail_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="140dp"


        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_name" />

    <TextView
        android:id="@+id/tv_detail_day"
        android:layout_width="57dp"
        android:layout_height="42dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="140dp"

        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@+id/tv_detail_month"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_name" />

    <TextView
        android:id="@+id/tv_detail_low_temp_icon"
        android:layout_width="24dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="92dp"
        android:drawablePadding="8dp"
        app:drawableStartCompat="@drawable/ic_baseline_device_thermostat_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_month" />

    <TextView
        android:id="@+id/tv_detail_time"
        android:layout_width="229dp"
        android:layout_height="37dp"
        android:layout_marginTop="144dp"

        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.733"
        app:layout_constraintStart_toEndOf="@+id/tv_detail_day"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_name" />

    <TextView
        android:id="@+id/tv_detail_low_temp"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="84dp"

        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@+id/tv_detail_low_temp_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_month" />

    <TextView
        android:id="@+id/tv_detail_high_temp_icon"
        android:layout_width="24dp"
        android:layout_height="25dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="96dp"
        android:drawablePadding="8dp"
        app:drawableStartCompat="@drawable/ic_baseline_device_thermostat_24_red"
        app:layout_constraintStart_toEndOf="@+id/tv_detail_low_temp"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_time" />

    <TextView
        android:id="@+id/tv_detail_high_temp"
        android:layout_width="136dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="84dp"

        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_detail_high_temp_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_time" />

    <TextView
        android:id="@+id/tv_detail_desc"
        android:layout_width="283dp"
        android:layout_height="134dp"

        android:layout_marginBottom="36dp"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_low_temp"
        app:layout_constraintVertical_bias="0.985" />
</androidx.constraintlayout.widget.ConstraintLayout>
